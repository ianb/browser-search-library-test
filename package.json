{
  "name": "browser-search-library-test",
  "id": "browser-search-library-test@mozilla.org",
  "description": "An experiment in how well different search libraries can handle browsing data",
  "private": true,
  "version": "0.0.0",
  "engines": {
    "node": ">=12.0.0"
  },
  "author": {
    "name": "Mozilla Emerging Technologies",
    "url": "https://voice.mozilla.org/firefox-voice"
  },
  "bugs": {
    "url": "https://github.com/ianb/browser-search-library-test/issues"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/plugin-transform-react-jsx": "^7.9.4",
    "@babel/preset-env": "^7.9.6",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.5.1",
    "concurrently": "^5.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-class-property": "^1.1.0",
    "eslint-plugin-fetch-options": "0.0.5",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-mozilla": "^1.3.0",
    "eslint-plugin-no-unsanitized": "^3.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.3",
    "prettier": "1.18.2",
    "prettier-linter-helpers": "^1.0.0",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.3.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-prettier": "^1.1.2",
    "web-ext": "^4.2.0"
  },
  "dependencies": {
    "fuse.js": "^3.6.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "homepage": "https://github.com/ianb/browser-search-library-test",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ianb/browser-search-library-test.git"
  },
  "scripts": {
    "start": "concurrently --kill-others --success first --names watch,browser 'npm run watch' 'npm run start-and-build'",
    "start-and-build": "env IN_DEVELOPMENT=1 npm-run-all maybeinstall build:* start-extension",
    "start-extension": "mkdir -p ${PROFILE:-Profile} && web-ext run --firefox-profile ${PROFILE:-Profile}/ --keep-profile-changes --firefox \"${FIREFOX:-nightly}\" --source-dir extension/ --browser-console --pref=extensions.experiments.enabled=true",
    "test": "npm-run-all build:* lint",
    "build:fuse": "mkdir -p extension/vendor/ ; cp node_modules/fuse.js/dist/fuse.js extension/vendor/",
    "build:deps": "mkdir -p extension/js/vendor/ extension/css/vendor/ ; for file in react/umd/react.production.min.js react-dom/umd/react-dom.production.min.js ; do cp node_modules/$file extension/vendor/ ; done",
    "build:jsx": "babel --relative --out-dir ./ --only '**/*.jsx' extension/",
    "watch-rebuild": "npm-run-all build:jsx build:intent-metadata build:manifest",
    "watch": "nodemon --on-change-only -e toml,jsx,ejs --exec 'npm run watch-rebuild'",
    "maybeinstall": "if [[ package.json -nt node_modules/last_install.txt ]] ; then npm install && touch node_modules/last_install.txt ; fi",
    "format": "prettier 'extension/**/*.{js,jsx,css}' --write",
    "lint": "npm-run-all lint:*",
    "lint:css": "stylelint 'extension/**/*.css'",
    "lint:html": "htmllint extension/**/*.html",
    "lint:extension": "web-ext lint -s extension --self-hosted",
    "lint:js": "eslint --rule '{\"no-console\": \"error\"}' --ext 'js,jsx' extension/ bin/",
    "once": "web-ext run -s extension",
    "package": "npm-run-all build:* && web-ext build -s extension --overwrite-dest -i '**/*.ejs' -i '**/*.jsx' -i '**/*.toml' && mv web-ext-artifacts/*.zip addon.xpi ; echo ./addon.xpi created",
    "postinstall": "npm-run-all build:*"
  }
}
